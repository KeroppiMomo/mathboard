{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ES2021.WeakRef"],
    "allowJs": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true
  }
}
